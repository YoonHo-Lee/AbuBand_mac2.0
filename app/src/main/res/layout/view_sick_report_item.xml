<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/cardCornerRadius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/selector_list_item"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@color/temp_high" />

        <TextView
            android:id="@+id/sickList_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="2015.11.02"
            android:textSize="@dimen/base_tiem_text_size" />

        <TextView
            android:id="@+id/sickList_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_text_size"
            android:layout_marginStart="@dimen/base_text_size"
            android:layout_toEndOf="@+id/sickList_date"
            android:layout_toRightOf="@+id/sickList_date"
            android:text="45.8"
            android:textSize="@dimen/base_tiem_text_size" />

        <TextView
            android:id="@+id/sickList_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:text="메르스"
            android:textSize="@dimen/base_tiem_text_size" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>