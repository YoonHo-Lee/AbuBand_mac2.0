<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dnabuba.tacademy.abuband.Member.MemberAddFragment">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="@dimen/inner_bg_width"
        android:layout_height="@dimen/inner_bg_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/join_inner_bg"
        android:paddingBottom="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="130dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/memberAdd_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/memberAdd_view2"
            android:layout_alignLeft="@+id/memberAdd_view2"
            android:layout_alignStart="@+id/memberAdd_view2">

            <EditText
                android:id="@+id/edit_MemberAdd_eMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="이메일주소"
                android:textSize="@dimen/base_text_size"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/memberAdd_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_Memberadd_add"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/edit_MemberAdd_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:textSize="@dimen/base_text_size"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_Memberadd_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/memberadd_btn"
            android:textSize="@dimen/base_text_size" />

    </RelativeLayout>

</RelativeLayout>
