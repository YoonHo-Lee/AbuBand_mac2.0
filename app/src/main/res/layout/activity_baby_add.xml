<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dnabuba.tacademy.abuband.Baby.BabyAddActivity"
    android:background="#eeeeee">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/inner_bg_width"
        android:layout_height="@dimen/inner_bg_height"
        android:background="@drawable/inner_bg_babyadd"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_babyImage"
            android:layout_marginTop="30dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/selector_add_btn" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/babyNameTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/edit_babyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="이름"
                android:textSize="@dimen/base_text_size"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/babyBirthTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/babyNameTIL"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/edit_babyBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:focusable="false"
                android:gravity="center"
                android:hint="생년월일"
                android:textSize="@dimen/base_text_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/babyGenderTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/babyBirthTIL"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/edit_babyGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:hint="성별"
                android:textSize="@dimen/base_text_size" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_babyAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/babyGenderTIL"
            android:layout_centerHorizontal="true"
            android:text="@string/babyAdd_btn"
            android:textSize="@dimen/base_text_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</RelativeLayout>
